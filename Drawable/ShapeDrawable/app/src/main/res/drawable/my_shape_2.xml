<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 定义填充渐变颜色-->
    <solid android:color="#ff0"/>
    <gradient
        android:startColor="#ffff0000"
        android:endColor="#80FF00FF"
        android:angle="45"/>
    <!-- 设置四周内边距-->
    <padding
        android:left="7dp"
        android:bottom="7dp"
        android:right="7dp"
        android:top="7dp"/>
    <!-- 设置圆角-->
    <corners
        android:radius="8dp"
        />
</shape>